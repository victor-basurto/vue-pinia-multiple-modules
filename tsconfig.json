{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
	"baseUrl": ".",
	"paths": {
		"@/*": ["src/*"],
		"@@types/*": ["src/@types/*"],
		"@store/*": ["src/store/*"],
		"@components/*": ["src/components/*"],
		"@views/*": ["src/views/*"],
		"@assets/*": ["src/assets/*"],
		"@styles/*": ["src/assets/scss/*"],
		"@routes/*": ["src/router/*"],
	},
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
